<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/subitemSpeed0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="0.25x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed0.25"
        android:clickable="true"
        android:text="0.5x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed0.5"
        android:clickable="true"
        android:text="0.75x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed0.75"
        android:clickable="true"
        android:text="Normal (1x)"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed1.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed1"
        android:clickable="true"
        android:text="1.25x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed1.25"
        android:clickable="true"
        android:text="1.5x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed1.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed1.5"
        android:clickable="true"
        android:text="1.75x"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/subitemSpeed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subitemSpeed1.75"
        android:clickable="true"
        android:text="2x"
        android:textSize="24dp"/>
</RelativeLayout>